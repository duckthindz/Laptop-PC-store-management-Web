@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "List Category";

    Paginate pager = new Paginate();

    int pageNo = 0;
    if(ViewBag.Pager!=null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<!DOCTYPE 
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="With=device=width" />
    <title>index</title>
</head>
<body>
    <h3>List Category</h3>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Add Category</a>
    <table class="table" id="myTable">
        <thead> 
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <th scope="col">Category Description</th>
                <th scope="col">Category Slug</th>
                <th scope="col">Category Status</th>
                <th scope="col">Category Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@Html.Raw(@item.Description)</td>
                    <td>@item.Slug</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text text-success">Hiển thị</span>
                        }
                        else
                        {
                            <span class="text text-danger">Ẩn</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" method="post">Edit</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Paging" model="@pager" />
</body>
</html>
