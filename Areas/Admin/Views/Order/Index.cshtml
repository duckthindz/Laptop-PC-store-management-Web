@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order listed";
}
<h3>List Order</h3>
<a class="btn btn-primary" asp-action="Create" asp-controller="Category">Add Category</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>

            <th scope="col">User Name</th>
            <th scope="col">Order Code</th>
            <th scope="col">Order Date</th>
            <th scope="col">Oder Status</th>

 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.UserName</td>
                <td>@item.OrderCode</td>
                <td>@item.CreatedDate</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đã xử lý</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-controller="Order" asp-action="ViewOrder" asp-route-OrderCode="@item.OrderCode">View Order</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-controller="Order" asp-action="Delete" asp-route-OrderCode="@item.OrderCode" >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
